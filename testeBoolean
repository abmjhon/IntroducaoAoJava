public class testeBoolean {
    public static void main(String[] args){

    boolean terDinheiro = false;
    boolean terVontade = true;
    boolean boraSair = terDinheiro && terVontade;

        // Tabela Verdade
        // Operador && (AND)
        // true && true = true
        // true && false = false
        // false && true = false
        // false && false = false

        // Operador || (OR)
        // true || true = true
        // true || false = true
        // false || true = true
        // false || false = false

        System.out.println(boraSair);

        String mensagem = terDinheiro ?  "Cuida papai, bora sair" : "TÃ´ liso pivete";
        System.out.println(mensagem);


    }

}
